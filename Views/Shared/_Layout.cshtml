                            <li><a class="dropdown-item" href="#">Reportes de facturas</a></li>
                            <li><a class="dropdown-item" href="#">Reportes de pendientes</a></li>
                            <li><hr class="dropdown-divider"></li>
                        </ul>
                    </li>

                </ul>
                <!--<ul>-->
                    @*<button class="btn bg-dark text-danger" type="submit"><i class="fa-solid fa-right-from-bracket"></i> Salir</button>*@
